<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.38"
        android:background="#F0F1F1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_expression"
            android:layout_marginTop="17dp"
            android:paddingRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:text="885+55"
            android:gravity="right"/>
        <TextView
            android:id="@+id/tv_result"
            android:layout_marginTop="45dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="940"
            android:paddingRight="25dp"
            android:gravity="right"
            android:textSize="27dp"
            android:textColor="#918B8B"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp">

            <ImageView
                android:id="@+id/img_history"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:src="@drawable/a" />

            <ImageView
                android:id="@+id/img_change_units"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:src="@drawable/b" />

            <ImageView
                android:id="@+id/img_more_features"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:src="@drawable/c" />
            <ImageView
                android:id="@+id/delete_one_char"
                android:layout_marginLeft="140dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/delete"/>

        </LinearLayout>
        <View
            android:id="@+id/divider"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="@dimen/_1sdp"
            android:background="#D8D6D6" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.62"
        android:background="#F0F1F1"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/layout_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >
            <ScrollView
                android:id="@+id/scroll_view_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp">
                <TextView
                    android:id="@+id/tv_history"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="textEnd"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:elevation="1dp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"/>
            </ScrollView>
        <Button
            android:id="@+id/btn_delete_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scroll_view_history"
            android:layout_centerInParent="true"
            android:background="@drawable/round_button_brown"
            android:text="Xóa nhật ký"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp">
        </Button>
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_C"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="C"
                android:textSize="25dp"
                android:background="@drawable/round_button"
                android:textColor="#EC1919"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="13dp"

                />
            <Button
                android:id="@+id/btn_bracket_open"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="("
                android:textSize="25dp"
                android:background="@drawable/round_button"
                android:textColor="@color/green"
                android:layout_marginRight="15dp"

                />
            <Button
                android:id="@+id/btn_bracket_close"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text=")"
                android:textSize="25dp"
                android:background="@drawable/round_button"
                android:textColor="@color/green"
                android:layout_marginRight="15dp"

                />
            <Button
                android:id="@+id/btn_divide"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="/"
                android:textSize="25dp"
                android:background="@drawable/round_button"
                android:layout_marginBottom="10dp"
                android:textColor="@color/green"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/round_button2"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="25dp"

                />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/round_button2"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/round_button2"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn_multiply"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/round_button"
                android:text="X"
                android:textColor="@color/green"
                android:textSize="25dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="4"
                android:textSize="25dp"
                android:background="@drawable/round_button2"
                android:textColor="@color/black"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="13dp"

                />
            <Button
                android:id="@+id/btn_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="5"
                android:textSize="25dp"
                android:background="@drawable/round_button2"
                android:textColor="@color/black"
                android:layout_marginRight="15dp"

                />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="6"
                android:textSize="25dp"
                android:background="@drawable/round_button2"
                android:textColor="@color/black"
                android:layout_marginRight="15dp"

                />

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="-"
                android:textSize="25dp"
                android:background="@drawable/round_button"
                android:layout_marginBottom="10dp"
                android:textColor="@color/green"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="1"
                android:textSize="25dp"
                android:background="@drawable/round_button2"
                android:textColor="@color/black"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="13dp"
                />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="2"
                android:textSize="25dp"
                android:background="@drawable/round_button2"
                android:textColor="@color/black"
                android:layout_marginRight="15dp"

                />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="3"
                android:textSize="25dp"
                android:background="@drawable/round_button2"
                android:textColor="@color/black"
                android:layout_marginRight="15dp"

                />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="+"
                android:textSize="25dp"
                android:background="@drawable/round_button"
                android:textColor="@color/green"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_mod"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="%"
                android:textSize="20dp"
                android:background="@drawable/round_button2"
                android:textColor="@color/black"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="13dp"

                />

            <Button
                android:id="@+id/btn_0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="0"
                android:textSize="25dp"
                android:background="@drawable/round_button2"
                android:textColor="@color/black"
                android:layout_marginRight="15dp"
                />

            <Button
                android:id="@+id/btn_dot"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text=","
                android:textSize="25dp"
                android:background="@drawable/round_button2"
                android:textColor="@color/black"
                android:layout_marginRight="15dp"

                />

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="="
                android:textSize="25dp"
                android:background="@drawable/round_button1"
                android:textColor="@color/white"

                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>